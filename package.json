{
  "name": "soundz-crm",
  "version": "1.0.0",
  "description": "CRM tizimi - Mijozlar bilan munosabatlarni boshqarish",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "db:generate": "cd apps/backend && pnpm prisma generate --schema=../../prisma/schema.prisma",
    "db:migrate": "cd apps/backend && pnpm prisma migrate dev --schema=../../prisma/schema.prisma",
    "db:seed": "cd apps/backend && pnpm db:seed"
  },
  "devDependencies": {
    "turbo": "^1.10.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts || node prisma/seed.js"
  }
}

